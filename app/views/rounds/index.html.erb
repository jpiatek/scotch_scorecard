<div class="page-header">
  <h1>
    Rounds
    <a href="/rounds/new" class="btn btn-lg btn-success">New Round</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Course name</th>
        <th>Played on</th>
        <th>User</th>
        <th>Player 1</th>
        <th>Player 2</th>
        <th>Player 3</th>
        <th>Player 4</th>
         <th>Actions</th>
      </tr>

      <% @rounds.each do |round| %>
      <tr>
        <td><%= round.course_name %></td>
        <td><%= round.played_on %></td>
        <td><%= round.user_id %></td>
        <td><%= round.player_1 %></td>
        <td><%= round.player_2 %></td>
        <td><%= round.player_3 %></td>
        <td><%= round.player_4 %></td>


        <td>
          <a href="/rounds/<%= round.id %>" class="btn btn-primary">Show Round</a>
          <a href="/rounds/<%= round.id %>/edit" class="btn btn-warning">Edit Players</a>
          <a href="/delete_round/<%= round.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
