<!-- Validation failure messages -->
<% if @round.errors.any? %>
  <% @round.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Round</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_round" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for course_name -->
      <div class="form-group">
        <label for="course_name" class="control-label">
          Course name
        </label>
        <input type="text" id="course_name" name="course_name" placeholder="Course name" class="form-control" value="<%= @round.course_name %>">
      </div>

      Player 1 and Player 2 are a team:
      <!-- Label and input for player_1 -->
      <div class="form-group">
        <label for="player_1" class="control-label">
          Player 1
        </label>
        <input type="text" id="player_1" name="player_1" placeholder="Player 1" class="form-control" value="<%= @round.player_1 %>">
      </div>


      <!-- Label and input for player_2 -->
      <div class="form-group">
        <label for="player_2" class="control-label">
          Player 2
        </label>
        <input type="text" id="player_2" name="player_2" placeholder="Player 2" class="form-control" value="<%= @round.player_2 %>">
      </div>

Player 3 and Player 4 are a team:
      <!-- Label and input for player_3 -->
      <div class="form-group">
        <label for="player_3" class="control-label">
          Player 3
        </label>
        <input type="text" id="player_3" name="player_3" placeholder="Player 3" class="form-control" value="<%= @round.player_3 %>">
      </div>

      <!-- Label and input for player_4 -->
      <div class="form-group">
        <label for="player_4" class="control-label">
          Player 4
        </label>
        <input type="text" id="player_4" name="player_4" placeholder="Player 4" class="form-control" value="<%= @round.player_4 %>">
      </div>


      <!-- Label and input for user_id -->
          <input type="hidden" name="user_id" placeholder="User" value="<%= current_user.id %>">


      <button class="btn btn-success">
        Create Round
      </button>
      or
      <a href="/rounds">Cancel</a>
    </form>
  </div>
</div>
