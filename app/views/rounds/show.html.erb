      <% @round.holes.each do |hole| %>
      <tr>
        <td><%= hole.round_id %></td>
        <td><%= hole.id %></td>
        <td><%= hole.number %></td>
        <form action="/update_hole/<%= hole.id %>" method="post">
        <td><input type="text" size="1" id="par" name="par" placeholder="Par" value="<%= hole.par %>"></td>
        <td><input type="text" size="1" id="par" name="par" placeholder="Par" value="<%= hole.p1_score %>"></td>
        <td><input type="text" size="1" id="par" name="par" placeholder="Par" value="<%= hole.p2_score %>"></td>
        <td><input type="text" size="1" id="par" name="par" placeholder="Par" value="<%= hole.p3_score %>"></td>
        <td><input type="text" size="1" id="par" name="par" placeholder="Par" value="<%= hole.p4_score %>"></td>
        <td><div class="checkbox">
        <label for="roll">
          <input type="checkbox" id="roll" name="roll" value="1" <%= "checked" if hole.roll %>>
        </label>
     </div>
      </td>
        <td><%= hole.ctp_player %></td>
        <td>
     <a href="/holes/<%= hole.id %>/edit" class="btn btn-primary">Edit</a>
     </form>

        <%end%>



        </td>
      </tr>


    </table>
  </div>
</div>




