<div class="page-header">
  <h2>Match Score
    </h2>
  <h3><%= @round.course_name %>, <%= @round.played_on %></h3>
    </div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">

      <div class="row">
      <div class="col-md-2" >Player</div>
      <div class="col-md-2" align="center">Front</div>
      <div class="col-md-2" align="center">Back</div>
      <div class="col-md-2" align="center">Total</div>
      <div class="col-md-2" align="right">Relative to Par</div>
      </div>

      <div class="row">
      <div class="col-md-2" ><%= @round.player_1 %></div>
      <div class="col-md-2" align="center"><%=@p1_front%></div>
      <div class="col-md-2" align="center"><%=@p1_back%></div>
      <div class="col-md-2" align="center"><%=@p1_total%></div>
      <div class="col-md-2" align="right"><%=@p1_total-@course_par%></div>
      </div>

      <div class="row">
      <div class="col-md-2"><%= @round.player_2 %></div>
      <div class="col-md-2" align="center"><%=@p2_front%></div>
      <div class="col-md-2" align="center"><%=@p2_back%></div>
      <div class="col-md-2" align="center"><%=@p2_total%></div>
      <div class="col-md-2" align="right"><%=@p2_total-@course_par%></div>
      </div>

      <div class="row">
      <div class="col-md-2"><%= @round.player_3 %></div>
      <div class="col-md-2" align="center"><%=@p3_front%></div>
      <div class="col-md-2" align="center"><%=@p3_back%></div>
      <div class="col-md-2" align="center"><%=@p3_total%></div>
      <div class="col-md-2" align="right"><%=@p3_total-@course_par%></div>
      </div>

      <div class="row">
      <div class="col-md-2"><%= @round.player_4 %></div>
      <div class="col-md-2" align="center"><%=@p4_front%></div>
      <div class="col-md-2" align="center"><%=@p4_back%></div>
      <div class="col-md-2" align="center"><%=@p4_total%></div>
      <div class="col-md-2" align="right"><%=@p4_total-@course_par%></div>
      </div>

      <div class="row">
      </div>


    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/rounds/<%= @round.id %>/edit" class="btn btn-success">
        Holes
      </a>
      </div>

  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
       <th>Round</th>
        <th>Hole ID</th>
        <th>Number</th>
        <th><a href="/rounds/<%= @round.id %>/edit" class="btn btn-danger">
        Par
      </a></th>
        <th><%= @round.player_1%></th>
        <th><%= @round.player_2%></th>
        <th><%= @round.player_3%></th>
        <th><%= @round.player_4%></th>
        <th>Roll</th>
        <th>Prox</th>
        <th>Actions</th>
      </tr>


      <% @round.holes.each do |hole| %>
      <tr>
        <td><%= hole.round_id %></td>
        <td><%= hole.id %></td>
        <td><%= hole.number %></td>
        <td><%= hole.par %></td>
        <td><%= hole.p1_score %></td>
        <td><%= hole.p2_score %></td>
        <td><%= hole.p3_score %></td>
        <td><%= hole.p4_score %></td>
        <td><%= hole.roll %></td>
        <td><%= hole.ctp_player %></td>
        <td>
     <a href="/holes/<%= hole.id %>/edit" class="btn btn-primary">Edit</a>

        <%end%>



        </td>
      </tr>


    </table>
  </div>
</div>
