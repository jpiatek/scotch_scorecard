<!-- Validation failure messages -->
<% if @hole.errors.any? %>
  <% @hole.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Hole #<%= @hole.number %></h3>
</div>


<div class="row">
  <div class="col-md-12">
    <form action="/update_hole/<%= @hole.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">




      <!-- Label and input for round_id -->
          <div class="form-group">
         <input type="hidden" name="round_id" value="<%= @hole.round_id %>">
         </div>

      <!-- Label and input for par -->
      <div class="form-group">
        <label for="par" class="control-label">
          Par
        </label>

        <input type="text" id="par" name="par" placeholder="Par" class="form-control" value="<%= @hole.par %>">
      </div>



      <!-- Label and input for number -->

          <div class="form-group">
         <input type="hidden" name="number" value="<%= @hole.number %>">
         </div>




      <!-- Label and input for p1_score -->
      <div class="form-group">
        <label for="p1_score" class="control-label">
          <%=@hole.round.player_1%>
        </label>

        <input type="text" id="p1_score" name="p1_score" placeholder="<%=@hole.round.player_1%>'s score" class="form-control" value="<%= @hole.p1_score %>">
      </div>


            <!-- Label and input for p2_score -->
      <div class="form-group">
        <label for="p2_score" class="control-label">
          <%=@hole.round.player_2%>
        </label>

        <input type="text" id="p2_score" name="p2_score" placeholder="<%=@hole.round.player_2%>'s score" class="form-control" value="<%= @hole.p2_score %>">
      </div>

      <!-- Label and input for p3_score -->
      <div class="form-group">
        <label for="p3_score" class="control-label">
          <%=@hole.round.player_3%>
        </label>

        <input type="text" id="p3_score" name="p3_score" placeholder="<%=@hole.round.player_3%>'s score" class="form-control" value="<%= @hole.p3_score %>">
      </div>


      <!-- Label and input for p4_score -->
      <div class="form-group">
        <label for="p4_score" class="control-label">
          <%=@hole.round.player_4%>
        </label>

        <input type="text" id="p4_score" name="p4_score" placeholder="<%=@hole.round.player_4%>'s score" class="form-control" value="<%= @hole.p4_score %>">
      </div>

      <!-- Label and input for ctp_player -->
      <div class="form-group">
        <label for="ctp_player" class="control-label">
          Who got prox?
        </label>

        <input type="text" id="ctp_player" name="ctp_player" placeholder="Ctp player" class="form-control" value="<%= @hole.ctp_player %>">
      </div>

            <!-- Label and input for roll -->
      <div class="checkbox">
        <label for="roll">
          <input type="checkbox" id="roll" name="roll" value="1" <%= "checked" if @hole.roll %>>
          Roll
        </label>
      </div>


      <button class="btn btn-warning">
        Update Hole
      </button>
      or
      <a href="/holes/<%= @hole.id %>">Cancel</a>
    </form>
  </div>
</div>
